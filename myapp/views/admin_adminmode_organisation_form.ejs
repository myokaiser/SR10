<script>
    function validateSiren(input) {
      var regex = /^\d{9}$/; // expression régulière pour 9 chiffres
      if (!regex.test(input.value)) { // si le champ ne respecte pas l'expression régulière
        input.setCustomValidity("Le numéro SIREN doit contenir exactement 9 chiffres"); // afficher un message d'erreur personnalisé
      } else { // sinon
        input.setCustomValidity(""); // effacer le message d'erreur
      }
    }
  </script>
