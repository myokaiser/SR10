<!DOCTYPE html>
<html lang="en">
<head>
  <title>WSNH - recruiter offers</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="icon" sizes="16x16" type="image/png" href="https://th.bing.com/th/id/R.b10e96c930666f016df733b3d0708384?rik=8mEriFTINweOgQ&riu=http%3a%2f%2fwww.pngplay.com%2fwp-content%2fuploads%2f1%2fLetter-W-PNG-Stock-Photo.png&ehk=TaMIw3MiRv29LoFRD1wBx0E8Bgzb7lQI9PxejqN%2bDMk%3d&risl=&pid=ImgRaw&r=0">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <div class="p-5 bg-color text-white text-center">
            <h1>WORK SMARTER/</h1>
            <p>NOT HARDER</p> 
        </div>
    </header>

<main>
    <nav class="sticky-top navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="./">Accueil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/candidat/liste_offres">Chercher des offres</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/candidat/mes_candidatures">Mes Candidatures</a>
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a class="nav-link button-important" href="/candidat/recruiter_form">Devenir recruteur</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/deconnexion">Déconnexion</a>
            </li>
        </ul>
        </div>
    </nav>

    <div id="searchResults" class="fluid-container red-pannel border-top-0 border-bottom-0">
        
        <div class="row info-list-style space">
            <div class="col-5 p-3 info-list-bdr8-default bg-dark text-center text-white">
                <form class="form-inline input-group" action="/candidat/liste_offres/search"> <!-- #TODO RECHERCHE -->
                    <input name="page" type="hidden" value="1">
                    <input name="keyword" class="form-control mr-sm-2" type="search" placeholder="Rechercher" aria-label="Search">
                    <button class="btn search-btn my-2 my-sm-0 input-group-appened" type="submit">Rechercher</button>
                </form>
            </div>
            <div class="col bg-dark p-3 text-center text-white">
                <form action="/candidat/liste_offres/sort" method="GET"> <!-- #TODO TRI -->
                    <input name="page" type="hidden" value="1">
                    <select name="order" class="btn search-btn my-2 my-sm-0 input-group-appened" onchange="this.form.submit()"> <!-- affichage conditionnel -->
                        <% if (order === "asc") { %>
                            <option value="asc" selected>Récent</option>
                            <option value="desc">Ancien</option>
                        <% } else if (order === "desc") { %>
                            <option value="asc">Récent</option>
                            <option value="desc" selected>Ancien</option>
                        <% } else { %>
                            <option value="asc">Récent</option>
                            <option value="desc">Ancien</option>
                        <% } %>
                    </select>
                </form>
            </div>
            <div class="col info-list-bdr8-2 p-3 bg-dark text-center text-white">
                <form action="/candidat/liste_offres/type" method="GET"> <!-- #TODO TYPE -->
                    <input name="page" type="hidden" value="1">
                    <select name="poste" class="btn search-btn my-2 my-sm-0 input-group-appened" onchange="this.form.submit()">
                        <% if (type === "cdi") { %>
                            <option value="cdi" selected>CDI</option>
                            <option value="cdd">CDD</option>
                            <option value="interim">Intérim</option>
                            <option value="alternance">Alternance</option>
                            <option value="contratpro">Contrat pro</option>
                            <option value="tempspartiel">Temps partiel</option>
                            <option value="stage">Stage</option>
                            <option value="freelance">Freelance</option>
                        <% } else if (type === "cdd") { %>
                            <option value="cdi">CDI</option>
                            <option value="cdd" selected>CDD</option>
                            <option value="interim">Intérim</option>
                            <option value="alternance">Alternance</option>
                            <option value="contratpro">Contrat pro</option>
                            <option value="tempspartiel">Temps partiel</option>
                            <option value="stage">Stage</option>
                            <option value="freelance">Freelance</option>
                        <% } else if (type === "interim") { %>
                            <option value="cdi">CDI</option>
                            <option value="cdd">CDD</option>
                            <option value="interim" selected>Intérim</option>
                            <option value="alternance">Alternance</option>
                            <option value="contratpro">Contrat pro</option>
                            <option value="tempspartiel">Temps partiel</option>
                            <option value="stage">Stage</option>
                            <option value="freelance">Freelance</option>
                        <% } else if (type === "alternance") { %>
                            <option value="cdi">CDI</option>
                            <option value="cdd">CDD</option>
                            <option value="interim">Intérim</option>
                            <option value="alternance" selected>Alternance</option>
                            <option value="contratpro">Contrat pro</option>
                            <option value="tempspartiel">Temps partiel</option>
                            <option value="stage">Stage</option>
                            <option value="freelance">Freelance</option>
                        <% } else if (type === "contratpro") { %>
                            <option value="cdi">CDI</option>
                            <option value="cdd">CDD</option>
                            <option value="interim">Intérim</option>
                            <option value="alternance">Alternance</option>
                            <option value="contratpro" selected>Contrat pro</option>
                            <option value="tempspartiel">Temps partiel</option>
                            <option value="stage">Stage</option>
                            <option value="freelance">Freelance</option>
                        <% } else if (type === "tempspartiel") { %>
                            <option value="cdi">CDI</option>
                            <option value="cdd">CDD</option>
                            <option value="interim">Intérim</option>
                            <option value="alternance">Alternance</option>
                            <option value="contratpro">Contrat pro</option>
                            <option value="tempspartiel" selected>Temps partiel</option>
                            <option value="stage">Stage</option>
                            <option value="freelance">Freelance</option>
                        <% } else if (type === "stage") { %>
                            <option value="cdi">CDI</option>
                            <option value="cdd">CDD</option>
                            <option value="interim">Intérim</option>
                            <option value="alternance">Alternance</option>
                            <option value="contratpro">Contrat pro</option>
                            <option value="tempspartiel">Temps partiel</option>
                            <option value="stage" selected>Stage</option>
                            <option value="freelance">Freelance</option>
                        <% } else if (type === "freelance") { %>
                            <option value="cdi">CDI</option>
                            <option value="cdd">CDD</option>
                            <option value="interim">Intérim</option>
                            <option value="alternance">Alternance</option>
                            <option value="contratpro">Contrat pro</option>
                            <option value="tempspartiel">Temps partiel</option>
                            <option value="stage">Stage</option>
                            <option value="freelance" selected>Freelance</option>
                        <% } else { %>
                            <option value="cdi">CDI</option>
                            <option value="cdd">CDD</option>
                            <option value="interim">Intérim</option>
                            <option value="alternance">Alternance</option>
                            <option value="contratpro">Contrat pro</option>
                            <option value="tempspartiel">Temps partiel</option>
                            <option value="stage">Stage</option>
                            <option value="freelance">Freelance</option>
                        <% } %>
                    </select>
                </form>
            </div>
        </div>

        <% candidate.results.forEach((offre)=> { %>
            <div id="resultElement" class="row info-list-style space">
                    <div class="col p-3 bg-dark info-list-bdr8-1">
                        <span id="resultTitle" class="text-white"><%= offre.titre %> - <%= offre.nom %></span>
                    </div>
                    <div class="col p-3 text-center info-list-style-button info-list-bdr8-2">
                        <a class="text-white fw-bold" href="/candidat/liste_offres/details/<%=offre.id%>">Voir le détail</a>
                    </div>
            </div>
        <% }) %>


        <% if (pages.length > 1) { %>
            <nav aria-label="Page navigation">
              <ul class="pagination">
                
                <% if (pages[0].number !== 1) { %>
                <li class="page-item"><a class="page-link" href="<%= paginate.href(req)({ page: 1 }) %>">Première</a></li>
                <% } %>
                <% pages.forEach(function(page) { %>
                <li class="page-item<%= page.number === currentPage ? ' active' : '' %>"><a class="page-link" href="<%= paginate.href(req)({ page: page.number }) %>"><%= page.number %></a></li> <!-- utiliser paginate.href(req) avec le numéro de la page -->
                <% }) %>
                <% if (pages[pages.length - 1].number !== candidate.pageCount) { %>
                <li class="page-item"><a class="page-link" href="<%= paginate.href(req)({ page: pageCount }) %>">Dernière</a></li>
                <% } %>
              </ul>
            </nav>
          <% } %>
    </div>
   
</main>

<footer>
    <div class="p-4 bg-dark text-white text-center">
        <p>SR10 - Oriane LANFRANCHI & William SCHENTEN</p>
    </div>
</footer>

</body>
</html>
